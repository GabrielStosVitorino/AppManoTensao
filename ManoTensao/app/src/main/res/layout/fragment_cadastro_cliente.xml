<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CadastroCliente">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/off_white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/quero_contratar"
            android:textSize="20sp"
            android:fontFamily="@font/montserrat"
            android:textFontWeight="500"
            android:id="@+id/tv_contratar"
            android:layout_marginTop="48dp"
            android:layout_centerHorizontal="true"
            android:textColor="#000000"
            />

        <ImageView
            android:layout_width="98dp"
            android:layout_height="93dp"
            android:src="@mipmap/Ellipse"
            android:id="@+id/iv_ellipse"
            android:layout_below="@id/tv_contratar"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="13dp"
            />
        
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="135dp"
            android:layout_height="30dp"
            android:background="@drawable/custom_button_perfil"
            android:id="@+id/btn_perfil"
            android:text="@string/foto_perfil"
            android:textSize="15sp"
            android:layout_below="@id/tv_contratar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="131dp"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="330dp"
            android:layout_height="46dp"
            android:text="@string/pessoais"
            android:background="@drawable/custom_button_private"
            android:textSize="18sp"
            android:textFontWeight="300"
            android:id="@+id/btn_pessoais"
            android:gravity="start|center_vertical"
            android:paddingLeft="15dp"
            android:drawableStart="@drawable/ic_avatar_cad_foreground"
            android:layout_below="@id/btn_perfil"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="130dp"
            style="?android:attr/borderlessButtonStyle"
            />



    </RelativeLayout>

</FrameLayout>