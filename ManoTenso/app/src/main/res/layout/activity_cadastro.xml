<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Cadastro">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/off_white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mano"
            android:textSize="24sp"
            android:fontFamily="@font/electricshocker"
            android:textFontWeight="400"
            android:id="@+id/tv_mano"
            android:layout_marginTop="48dp"
            android:layout_marginLeft="18dp"
            android:textColor="#000000"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/devemos"
            android:textSize="24sp"
            android:fontFamily="@font/montserrat"
            android:textFontWeight="600"
            android:id="@+id/tv_devemos"
            android:layout_marginTop="100dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/tv_mano"
            android:textColor="#000000"
            />

        <View
            android:layout_width="367dp"
            android:layout_height="541dp"
            android:layout_below="@id/tv_devemos"
            android:layout_marginTop="59dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/custom_view"
            />

        <ImageView
            android:layout_width="73dp"
            android:layout_height="wrap_content"
            android:src="@drawable/reta"
            android:id="@+id/iv_line"
            android:layout_below="@id/tv_devemos"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="81dp"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="274dp"
            android:layout_height="158dp"
            android:text="@string/contratar"
            android:background="@drawable/custom_buttom_signup"
            android:textSize="18sp"
            android:fontFamily="@font/montserrat"
            android:textFontWeight="500"
            android:id="@+id/btn_entrar"
            android:gravity="start"
            android:paddingLeft="15dp"
            android:layout_below="@id/iv_line"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="27dp"
            android:paddingTop="27dp"
            android:onClick="cadastroCliente"
            />

        <TextView
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:text="@string/busca"
            android:textSize="13sp"
            android:fontFamily="@font/montserrat"
            android:textFontWeight="300"
            android:id="@+id/tv_estou_em_busca"
            android:layout_marginTop="100dp"
            android:gravity="start"
            android:paddingLeft="15dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/iv_line"
            android:textColor="#000000"
            android:elevation="@dimen/cardview_default_elevation"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="274dp"
            android:layout_height="158dp"
            android:text="@string/prestador"
            android:background="@drawable/custom_button_sigup2"
            android:textSize="18sp"
            android:fontFamily="@font/montserrat"
            android:textFontWeight="500"
            android:id="@+id/btn_entrarPrestador"
            android:gravity="start"
            android:paddingLeft="15dp"
            android:layout_below="@id/btn_entrar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="26dp"
            android:paddingTop="27dp"
            android:onClick="cadastroPrestador"
            />

        <TextView
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:text="@string/profissional"
            android:textSize="13sp"
            android:fontFamily="@font/montserrat"
            android:textFontWeight="300"
            android:id="@+id/tv_sou_prestador"
            android:layout_marginTop="150dp"
            android:gravity="start"
            android:paddingLeft="15dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/tv_estou_em_busca"
            android:textColor="#000000"
            android:elevation="@dimen/cardview_default_elevation"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tenho_cadastro"
            android:textSize="15sp"
            android:fontFamily="@font/montserrat"
            android:textFontWeight="400"
            android:id="@+id/tv_tenho_cadastro"
            android:layout_marginTop="23dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/btn_entrarPrestador"
            android:textColor="#000000"
            android:onClick="voltarLogin"
            />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>